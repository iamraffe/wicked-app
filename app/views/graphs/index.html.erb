<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <table id="graphs-index-table" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>
            Type
          </th>
          <th>
            Patient Name
          </th>
          <th>
            Created at
          </th>
          <th>
            Updated at
          </th>
          <th data-orderable="false">
            Options
          </th>
        </tr>
      </thead>
      <tbody>
        <% @graphs.each do |graph| %>
          <tr class="graph-row">
            <td><strong><%= graph.type.upcase %></strong></td>
            <td><img src="<%= graph.user.avatar %>" alt="<%= graph.user.full_name %>" class="img-responsive img-circle"> <%= link_to graph.user.full_name, user_path(graph.user), class: "btn btn-link" %></td>
            <td><%= time_ago_in_words(graph.created_at) %> ago</td>
            <td><%= time_ago_in_words(graph.updated_at) %> ago</td>
            <td>
              <ul class="list-unstyled">
                <li><%= link_to "Show", "/graphs/#{graph.id}", class: "btn-link btn" %></li>
                <li><%= link_to "Edit", "/graphs/#{graph.id}/build/add_patient", class: "btn-link btn" %></li>
              </ul>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
