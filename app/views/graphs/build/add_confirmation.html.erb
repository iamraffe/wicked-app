<div class="add-confirmation-step">
  <div class="col-sm-9 col-sm-offset-3">
    <section class="row">
      <header class="col-sm-12">
        <h1>You're all set!</h1>
        <h2>A <i><em><%= @graph.type.underscore.humanize.titleize.upcase %></em> Data Chart</i> for the patient <strong class="patient-name"><%= @graph.user.full_name %></strong> has been created.</h2>
      </header>
    </section>
    <section class="row">
      <div class="col-sm-8">
        <div id="graph-container" class="js--graph--wrapper" data-type="<%= @graph.type.underscore %>" data-id="<%= @graph.id %>">
          <div id="graph"></div>
        </div>
      </div>
      <div class="col-sm-4 svg-controls">
        <%= render "graphs/shared/controls" %>
      </div>
    </section>
    <div class="row">
      <div class="col-sm-8">
        <div class="row">
          <div class="col-sm-4 col-sm-offset-8">
            <%= form_for @graph, url: wizard_path do |f| %>
              <input type="hidden" value="<%= @graph.type %>" name="type">
              <%= f.hidden_field :status, value: @graph.status %>
              <%= f.submit "Save", class: "btn btn-primary form-control" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
