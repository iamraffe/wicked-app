<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <% @users.each do |user| %>
      <div class="row">
        <div class="col-xs-2">
          <img src="<%= user.avatar %>" alt="<%= user.full_name %>" class="img-responsive img-circle">
        </div>
        <div class="col-xs-8">
          <%= link_to user.full_name, user_path(user), class: "btn btn-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
