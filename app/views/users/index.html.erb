<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <table id="users-index-table" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th data-orderable="false">
            Avatar
          </th>
          <th>
            Full Name
          </th>
          <th>
            Email
          </th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr class="user-row">
            <td><img src="<%= user.avatar %>" alt="<%= user.full_name %>" class="img-responsive img-circle"></td>
            <td><%= link_to user.full_name, user_path(user), class: "btn btn-link" %></td>
            <td><%= user.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
