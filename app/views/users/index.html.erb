<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <table id="users-index-table" class="table table-striped table-bordered" data-order='[[ 2, "asc" ]]'>
      <thead>
        <tr>
          <th data-orderable="false">
            Avatar
          </th>
          <th>
            First Name
          </th>
          <th>
            Last Name
          </th>
          <th>
            Email
          </th>
          <th data-orderable="false">
            Options
          </th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr class="user-row">
            <td><img src="<%= user.avatar %>" alt="<%= user.full_name %>" class="img-responsive img-circle"></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= link_to "Show", user_path(user), class: "btn btn-link" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
