<div class="row user-profile">
  <div class="col-xs-8 col-xs-offset-2">
    <header class="row">
      <div class="col-sm-6">
        <h1>
          <%= @user.full_name %>
        </h1>
      </div>
      <div class="col-sm-6">
        <img src="<%= @user.avatar %>" alt="<%= @user.full_name %>" class="img-responsive img-circle pull-right">
      </div>
    </header>
    <div class="row">
      <div class="col-xs-12">
        <h1>
          <%= @user.first_name %>'s charts
        </h1>
      </div>
      <div class="col-xs-12">
        <table id="graphs-index-table" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>
                Type
              </th>
              <th>
                Created at
              </th>
              <th>
                Updated at
              </th>
              <th data-orderable="false">
                Options
              </th>
            </tr>
          </thead>
          <tbody>
            <% @user.graphs.each do |graph| %>
              <tr class="graph-row">
                <td><strong><%= graph.type.upcase %></strong></td>
                <td><%= time_ago_in_words(graph.created_at) %> ago</td>
                <td><%= time_ago_in_words(graph.updated_at) %> ago</td>
                <td><%= link_to "Edit", "/graphs/#{graph.id}/build/add_patient", class: "btn-link btn" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
